# Associate NSG with Private Endpoint subnet
resource "azurerm_subnet_network_security_group_association" "private_endpoint" {
  subnet_id                 = azurerm_subnet.private_endpoint.id
  network_security_group_id = azurerm_network_security_group.private_endpoint.id
}

# Route Table for AKS
resource "azurerm_route_table" "aks" {
  name                          = "aks-route-table"
  location                      = azurerm_resource_group.main.location
  resource_group_name           = azurerm_resource_group.main.name
  disable_bgp_route_propagation = false
  tags                          = var.tags

  # Route to Internet via Azure Firewall (can be customized)
  route {
    name                   = "default-route"
    address_prefix         = "0.0.0.0/0"
    next_hop_type          = "Internet"
  }

  # Route for AKS service CIDR
  route {
    name           = "aks-service-route"
    address_prefix = var.service_cidr
    next_hop_type  = "VnetLocal"
  }
}

# Associate route table with AKS subnet
resource "azurerm_subnet_route_table_association" "aks" {
  subnet_id      = azurerm_subnet.aks.id
  route_table_id = azurerm_route_table.aks.id
}

